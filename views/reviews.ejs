<!DOCTYPE HTML>
<html>
  <head>
    <title>Reviews</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </head>
  <body>
    <header>
      <% include header %>
    </header>

    <h4><b>Riders Who Rode With You</b></h4>
      <ul>
        <% for (var i = 0; i < other_riders.length; ++i) { %>
          <li>
            <form action="/reviews/<%= ride_id %>" method="post">
              <h5><b><%= other_riders[i].kerberos %></b></h5>
              <p>Rating:</p>
              <span class="rating">
                <% if (other_riders_reviews[i] && other_riders_reviews[i].rating == 5) { %>
                  <input type="radio" class="rating-input" id="rating-input-1-5" name="rating" value="5" checked="checked" required/>
                <% } else { %>
                  <input type="radio" class="rating-input" id="rating-input-1-5" name="rating" value="5" required/>
                <% } %>
                  <label for="rating-input-1-5" class="rating-star"></label>

                <% if (other_riders_reviews[i] && other_riders_reviews[i].rating == 4) { %>
                  <input type="radio" class="rating-input" id="rating-input-1-4" name="rating" value="4" checked="checked"/>
                <% } else { %>
                  <input type="radio" class="rating-input" id="rating-input-1-4" name="rating" value="4"/>
                <% } %>
                  <label for="rating-input-1-4" class="rating-star"></label>

                <% if (other_riders_reviews[i] && other_riders_reviews[i].rating == 3) { %>
                  <input type="radio" class="rating-input" id="rating-input-1-3" name="rating" value="3" checked="checked"/>
                <% } else { %>
                  <input type="radio" class="rating-input" id="rating-input-1-3" name="rating" value="3"/>
                <% } %>
                  <label for="rating-input-1-3" class="rating-star"></label>

                <% if (other_riders_reviews[i] && other_riders_reviews[i].rating == 2) { %>
                  <input type="radio" class="rating-input" id="rating-input-1-2" name="rating" value="2" checked="checked"/>
                <% } else { %>
                  <input type="radio" class="rating-input" id="rating-input-1-2" name="rating" value="2"/>
                <% } %>
                  <label for="rating-input-1-2" class="rating-star"></label>

                <% if (other_riders_reviews[i] && other_riders_reviews[i].rating == 1) { %>
                  <input type="radio" class="rating-input" id="rating-input-1-1" name="rating" value="1" checked="checked"/>
                <% } else { %>
                  <input type="radio" class="rating-input" id="rating-input-1-1" name="rating" value="1"/>
                <% } %>
                  <label for="rating-input-1-1" class="rating-star"></label>

              </span>
              <p>Comment:</p>
              <% if (other_riders_reviews[i]) { %>
                <p><textarea name="comment" cols="50" rows="4"><%= other_riders_reviews[i].comment%></textarea></p>
              <% } else { %>
                <p><textarea name="comment" cols="50" rows="4"></textarea></p>
              <% } %>

              <input type="hidden" name = "ride_id" value=<%= ride_id %>></input>
              <input type="hidden" name = "reviewer_id" value=<%= user._id %>></input>
              <input type="hidden" name = "reviewee_id" value=<%= other_riders[i]._id %>></input>           
              <p><input type="submit" value="Submit"></p>
            </form>
          </li>
        <% } %>
      </ul>
  </body>
</html>

