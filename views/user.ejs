<!DOCTYPE HTML>
<!-- This should have the past + current rides for a user -->

<html>
  <head>
    <title>User page</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </head>
  <body>
    <header>
      <% include header %>
    </header>

    <% if (typeof(e) !== 'undefined') { %>
      <div id='error'> <%= e %> </div>
    <% } %>

    <div class="container">
      <h1>Reviews</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Rating</th>
            <th>Reviewer</th>
            <th>Comment</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < reviews.length; ++i) { %>
            <tr>
              <td>
              <span class="rating2">
                <% if (Math.round(reviews[i].rating) == 5) { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-5" name="rating" value="5" checked="checked" 
                  disabled required/>
                <% } else { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-5" name="rating" value="5" disabled required/>
                <% } %>
                  <label for="rating-input-1-5" class="rating-star2"></label>

                <% if (Math.round(reviews[i].rating) == 4) { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-4" name="rating" value="4" checked="checked"
                  disabled />
                <% } else { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-4" name="rating" value="4" disabled required/>
                <% } %>
                  <label for="rating-input-1-4" class="rating-star2"></label>

                <% if (Math.round(reviews[i].rating) == 3) { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-3" name="rating" value="3" checked="checked"
                  disabled />
                <% } else { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-3" name="rating" value="3" disabled required/>
                <% } %>
                  <label for="rating-input-1-3" class="rating-star2"></label>

                <% if (Math.round(reviews[i].rating) == 2) { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-2" name="rating" value="2" checked="checked"
                  disabled />
                <% } else { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-2" name="rating" value="2" disabled required/>
                <% } %>
                  <label for="rating-input-1-2" class="rating-star2"></label>

                <% if (Math.round(reviews[i].rating) == 1) { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-1" name="rating" value="1" checked="checked"
                  disabled />
                <% } else { %>
                  <input type="radio" class="rating-input2" id="rating-input-1-1" name="rating" value="1" disabled required/>
                <% } %>
                  <label for="rating-input-1-1" class="rating-star2"></label>
              </span>
              </td>
              <td><%= reviews[i].kerberos %></td>
              <td><%= reviews[i].comment %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
