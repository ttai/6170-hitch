<!DOCTYPE html>
<html>
  <head>
    <title>Hitch</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="/javascripts/ride.js"></script>
    <script type="text/javascript">
      window.onload = function() {
        initMap({ lat : <%= coordA.lat %>, lng: <%= coordA.lng %> },
                { lat : <%= coordB.lat %>, lng: <%= coordB.lng %> });
      };
    </script>
  </head>
  <body>
    <header>
      <% include header %>
    </header>

    <% if (typeof(e) !== 'undefined') { %>
      <div id='error'> <%= e %> </div>
    <% } %>
    <div class="container">
      <h1>Ride</h1>
      <b>Origin:</b> <%= ride.origin %> <br>
      <b>Destination: </b><%= ride.destination %> <br>
      <b>Departure time:</b> <%= ride.departure_time.toLocaleString() %> <br>
      <% if (map) { %>
        <b>Distance:</b> <%= distance %> <br>
        <b>Expected Duration:</b> <%= duration %> <br>
        <div id="map-canvas" style="width:800px;height:300px;margin-left:auto;margin-right:auto"></div>
      <% } %>
      <h3>Ride Participants</h3>
      <table class="table" id = "my_rides">
        <thead>
          <tr>
            <th>Rider</th>
            <th>Rating</th>
            <% if (String(user._id) === String(ride.creator) ) { %>
              <th>Remove Rider</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < riders.length; ++i) { %>
            <tr>
              <td><a href='/users/<%= riders[i]._id %>'><b><%= riders[i].kerberos %></b></a></td>
              <td><%= riders[i].rating %> stars</td>
              <% if (String(user._id) === String(ride.creator) && String(user._id) !== String(riders[i]._id)) { %>
              <td>
                <form method="post" action="/rides/remove">
                  <input type="hidden" name="ride_id" value=<%= ride._id %>></input>
                  <input type="hidden" name="user_id" value=<%= riders[i]._id %>></input>
                  <td><button type="submit" class="btn btn-danger">Remove</button></td>
                </form>
              </td>
            </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
      <br>
      <form method="post" action="/rides/participate">
        <input type="hidden" name="ride_id" value=<%= ride._id %> ></input>
        <td><button type="submit" class="btn btn-default">Leave ride</button></td>
      </form>
    </div>
  </body>
</html>
