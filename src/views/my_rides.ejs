<!DOCTYPE HTML>
<html>
  <head>
    <title>Your Rides</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
  </head>
  <body>
    <h2>Welcome, <%= user.kerberos %></h2>
    <header>
      <% include header %>
    </header>

    <% if (typeof(e) !== 'undefined') { %>
      <div id='error'> <%= e %> </div>
    <% } %>
    <h1>Your Rides</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Departure time</th>
          <th>Start Location</th>
          <th>Destination</th>
          <th>Seats open</th>
          <th>Transport</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < rides.length; ++i) { %>
          <tr>
            <td><%= rides[i].departure_time %></td>
            <td><%= rides[i].origin %></td>
            <td><%= rides[i].destination %></td>
            <td><%= rides[i].remaining_capacity %></td>
            <td><%= rides[i].transport %></td>
            <form method="post" action="/rides/participate">
              <input type="hidden" name = "ride_id" value=<%= rides[i]._id %>></input>
              <td><button type="submit" class="btn btn-default">Leave ride</button></td>
            </form>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
